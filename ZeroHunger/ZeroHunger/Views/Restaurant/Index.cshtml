
@{
    ViewBag.Title = "Index";
    ViewBag.Image = ViewBag.Restaurant.Image;
    ViewBag.Name = ViewBag.Restaurant.Name;
    Layout = "~/Views/Shared/RestaurantLayout.cshtml";
}

<div class="content container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Distribute Request</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-nowrap mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Status</th>
                                    <th>Preserve Till</th>
                                    <th>Food Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var request in Model)
                                    {
                                        <tr>
                                            <td>@request.Id</td>
                                            @if (request.Status == 1)
                                            {
                                                <td>Request Posted</td>
                                            }
                                            @if (request.Status == 2)
                                            {
                                                <td>Employee Assigned</td>
                                            }
                                            @if (request.Status == 3)
                                            {
                                                <td>Product Picked</td>
                                            }
                                            @if (request.Status == 4)
                                            {
                                                <td>Food Distrbuted</td>
                                            }
                                            @if (request.Status == 5)
                                            {
                                                <td>Food wasted</td>
                                            }
                                            <td> @request.PreserveTill.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <table class="table table-nowrap mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Food Name</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in ViewBag.Foods)
                                                        {
                                                            foreach (var food in item)
                                                            {
                                                                <tr>
                                                                    @if (food.DistributeRequestId == request.Id)
                                                                    {
                                                                        <td>@food.Id</td>
                                                                        <td>@food.FoodName</td>
                                                                    }
                                                                </tr>
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    document.getElementById("Dashboard").className = "active";
</script>

