@model ZeroHunger.Models.EmployeeData
@{
    ViewBag.Title = "ViewProfile";
    ViewBag.Image = Model.Image;
    ViewBag.Name = Model.Name;
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="page-title">Profile</h3>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center text-center">
        <div class="col-xl-9 col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Basic information</h5>
                </div>
                <div class="card-body">

                    <form>
                        <div class="row form-group">
                            <label for="name" class="col-sm-3 col-form-label input-label">Image</label>
                            <div class="col-sm-9">
                                <div class="d-flex align-items-center">
                                    <label class="avatar avatar-xxl profile-cover-avatar m-0"
                                           for="edit_img">
                                        <img id="avatarImg" class="avatar-img"
                                             src=@Model.Image alt="Profile Image">
                                        @*<input type="file" id="edit_img">*@
                                        @*<span class="avatar-edit">
                            <i data-feather="edit-2"
                               class="avatar-uploader-icon shadow-soft"></i>
                        </span>*@
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label for="name" class="col-sm-3 col-form-label input-label">Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="name"
                                       placeholder="Your Name" value="@Model.Name" disabled>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label for="email" class="col-sm-3 col-form-label input-label">Email</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="email" placeholder="Email"
                                       value="@Model.Email" disabled>
                            </div>
                        </div>

                        <div class="row form-group">
                            <label for="addressline1"
                                   class="col-sm-3 col-form-label input-label">Address</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="addressline1"
                                       placeholder="Your address" value="@Model.Address" disabled>
                            </div>
                        </div>

                        <div class="row form-group">
                            <label
                                   class="col-sm-3 col-form-label input-label">Area</label>
                            <div class="col-sm-9">
                                @foreach (var area in ViewBag.Area)
                                {
                                    if (area.Id == Model.AreaId)
                                    {
                                        <input type="text" class="form-control"
                                               placeholder="Your address" value=@area.AreaName disabled>
                                    }
                                }
                            </div>
                        </div>

                        <div class="row form-group">
                            <label class="col-sm-3 col-form-label input-label">Date of Birth</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.DOB, new { @type = "date", disabled = "disable", @class = "form-control datepicker", @Value = Model.DOB.ToString("yyyy-MM-dd") })
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("Profile").className = "active";
</script>

