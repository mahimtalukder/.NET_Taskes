
@model ZeroHunger.Models.RestaurantDataRegistration
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/Authontication.cshtml";
}

<div class="loginbox">
    <div class="login-right">
        <div class="login-right-wrap">
            <h1>Register</h1>
            <p class="account-subtitle">Access to our dashboard</p>

            <form action="" method="post">
                <div class="form-group">
                    <label class="form-control-label">Name</label>
                    <input class="form-control" type="text" name="Name" value="">
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label class="form-control-label">Email Address</label>
                    <input class="form-control" type="text" name="Email" value="">
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label class="form-control-label">Address</label>
                    <input class="form-control" type="text" name="Address" value="">
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label class="form-control-label">Area</label>
                    <select class="form-control" name="AreaId">
                        @foreach (var area in ViewBag.areas)
                        {
                            <option value=@area.Id>@area.AreaName</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.AreaId, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label class="form-control-label">Password</label>
                    <input class="form-control" type="password" name="Password" value="">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label class="form-control-label">Confirm Password</label>
                    <input class="form-control" type="password" name="ConfirmPassword">
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

                </div>

                <div class="form-group mb-0">
                    <button class="btn btn-lg btn-block btn-primary w-100"
                            type="submit">
                        Register
                    </button>
                </div>
            </form>

            <div class="login-or">
                <span class="or-line"></span>
                <span class="span-or">or</span>
            </div>

            <div class="social-login">
                <span>Register with</span>
                <a href="#" class="facebook"><i class="fab fa-facebook-f"></i></a><a href="#"
                                                                                     class="google"><i class="fab fa-google"></i></a>
            </div>

            <div class="text-center dont-have">
                Already have an account? <a href="/Home/Login">Login</a>
            </div>
        </div>
    </div>

</div>

